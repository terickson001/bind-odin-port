package lex

import "../common"
import hs "../hide_set"

Token :: struct
{
    next: ^Token,
    kind: Token_Kind,
    text: string,
    first_on_line: bool,
    value: Value,
    whitespace: int,
    
    hide_set: ^hs.Hide_Set,
    using location: common.File_Location,
}

Value :: struct
{
    size: u8,
    base: u8,
    sig_figs: u8,
    unsigned: b8,
    is_char: b8,
    
    val: union
    {
        u64,
        f64,
    }
}

clone_token :: proc(token: ^Token, allocator := context.allocator) -> ^Token
{
    ret := new_clone(token^);
    ret.next = nil;
    return ret;
}

